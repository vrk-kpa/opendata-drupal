{% if not logged_in %}
  <div class="header-login-link">
    <a href="{{ path('user.login') }}">
      <i class="far fa-sign-in"></i>
      <span>{% trans %}Log in{%  endtrans %}</span>
    </a>
  </div>
  <div class="header-register-link">
    <a href="{{ path('user.register') }}">
      <span>{%  trans %}Register{% endtrans %}</span>
    </a>
  </div>
{%  else %}
  <div class="header-profile-link">
    <a href="{{ path('avoindata_header.ckanprofile') }}">
      <span>{{avoindata_drupal_username}}</span>
      <a href="{{ path('user.logout') }}">
        <span>{% trans %}Logout{% endtrans %}</span>
      </a>
    </a>
  </div>
{% endif %}
